'''#Задача 15

import math
way = ['1 UP', '2 DOWN', '2 RIGHT', '3 LEFT']

up = "U"
down = "D"
right = "R"
left = "L"

distance = 0
def function():
	y = 0
	x = 0
	for i in range(0,len(way)):
		b = way[i]
		num = int(b[0])
		direction = b[2]
		if direction == up:
			y = y +  num
		elif direction == down:
			y = y - num
		elif direction == right:
			x = x + num
		elif direction == left:
			x = x - num
	x = pow(x,2)
	y = pow(y,2)
	distance = x + y
	distance = math.sqrt(distance)
	return distance

function()
print(function())
'''

'''#Завдання 16

text = 'ccc , aa , dddddddd , aa , bbbb , aa , ccc , bbbb aa'
text1 = ''
words = []
frequency = 0
last = []
lastdict = {}
sortalf = []
def function():
	frequency = 0
	text1 = text.replace("," , " ")
	words = text1.split()
	words.sort()
	for i in range(0,len(words)):
		frequency = 0
		for n in range(0,len(words)):
			if words[i] == words[n]:
				frequency = frequency + 1
		lastdict[words[i]] = frequency	

	print(lastdict)

	return lastdict

function()

'''






