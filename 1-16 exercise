'''#Задача 13 

password = "Qwert123@"
t = True

def function():
	
	if len(password) <= 6:
		print('Minimum length of transaction password: 6')

	elif len(password) >= 12:
		print('Maximum length of transaction password: 12')

	elif password.islower() == t:
		print('At least 1 letter between [A-Z]')

	elif password.isalpha() == t:
		print('At least 1 number between [0-9]')

	elif password.isdigit() == t:
		print('At least 1 letter between [a-z]')

	elif password.isalnum() == t:
		print('3. At least 1 character from [$#@]')

	#for i in range(0,len(password))
	else:
		print('Password - correct')
	return t
function()
print(t)
