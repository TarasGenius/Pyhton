'''#Задача 11  Двійкові числа кратні 5

a = '1010,1001,0110,1110,1101,1111'
b = []
answer = []
d = 0
binar = 0
def function():

	b = a.split(',')
	for i in range(0,len(b)):

		d = int(b[i],2)
		if d % 5 == 0:
			binar = bin(d)

			answer.append(binar)
	
	return answer


function()
print(answer)
'''

